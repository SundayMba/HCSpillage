@model List<DataPresentation>
@inject UserManager<ApplicationUser> userManager

@{
    ViewBag.Title = "User Device Information";
    string? user = ViewData["deviceId"] as string;
}



<div class="container  row" style="margin-top: 100px;">
    <div class="col-md-10 col-sm-6 text-center h3">
        Data Representation for Device Id: [@user]
    </div>
    <div class="col-md-2 col-sm-6 text-center">

        <form method="post" asp-action="UserDeviceInformationPDF" asp-controller="Home" asp-route-deviceId="@user">
            <input type="submit" value="Generate PDF" />
        </form>

    </div>
</div>

    <hr class="border border-success border-2" />
    <br />

    <table class="table table-striped table-success">
        <thead>
            <tr>

               
                <th>Location</th>
                <th>Data</th>
                <th>Status</th>
                <th>Date</th>
                <th>Time</th>
                <th>Config</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count == 0)
            {
                <tr class="mt-3">
                    <td></td>
                    <td></td>
                    <td class="text-primary">No Logged Data From this device yet.</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }else
            {
            @foreach (var data in Model)
            {
            
                    <tr>
                        <td>@data.Location</td>
                        <td>@data.Data</td>
                        <td>@data.Status</td>
                        <td>@data.date</td>
                        <td>@data.Time</td>
                        <td>@data.Config</td>
                    </tr>
                
            }
            }

            
        </tbody>
    </table>
</div>

@section Script
    {
    <script>
        var element = document.getElementsByTagName("footer")[0];
        element.parentNode.removeChild(element);
    </script>
  }